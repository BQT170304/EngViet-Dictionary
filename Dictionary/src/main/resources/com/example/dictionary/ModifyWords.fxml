            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="369.0" layoutY="288.0" mnemonicParsing="false" onMouseClicked="#alertDelete" prefHeight="43.0" prefWidth="160.0" text="Xóa từ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
    </children>
